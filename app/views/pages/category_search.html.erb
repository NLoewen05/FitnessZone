<main role="main" class="container">
    <div class="jumbotron">
        <h1>Fitness Zone</h1>

    <div class="ui four column centered grid">
        <% @products.each do |product| %>
        <div class="four wide column">
            <h2><%= product.name %></h2>
            <p><%= product.caption %></p>
            <p>Image link below</p>
            <%= link_to image_tag(product.image.url(:large)), details_path(product) %>
        </div>
        <% end %>
    </div>

<%= paginate @products %>
</div>
</main>
